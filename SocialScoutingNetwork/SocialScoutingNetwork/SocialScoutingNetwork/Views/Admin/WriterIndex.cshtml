@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewData["Title"] = "WriterIndex";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    td > div {
        overflow-y: scroll;
        overflow-x: hidden;
    } 
</style>
<div class="row" style="margin-top:50px; margin-left:25px;">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Writers CRUD</h5>
            </div>
            <div class="ibox-content">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı Adı</th>
                            <th>Adı</th>
                            <th>Soyadı</th>
                            <th>Küçük Resim</th>
                            <th>Büyük Resim</th>
                            <th>Mail</th>
                            <th>Şifre</th>
                            <th>Hakkında</th>
                            <th>Ünvan</th>
                            <th>Doğum Tarihi</th>
                            <th>Kayıt Tarihi</th>
                            <th>Adres</th>
                            <th>Durum</th>
                            <th>Ülke</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.WriterID</td>
                            <td>@item.WriterUserName</td>
                            <td>@item.WriterName</td>
                            <td>@item.WriterSurname</td>
                            <td><img src="/WriterImageFiles/@item.WriterImage" width="25" height="25" alt="@item.WriterImage" /></td>
                            <td><a href="/WriterImageFiles/@item.WriterImage">Resimi Gör</a></td>
                            <td>@item.WriterMail</td>
                            <td>@item.WriterPassword</td>
                            <td>@item.WriterAbout</td>
                            <td>@item.WriterTitle</td>
                            <td>@(((DateTime)item.WriterBirthDate).ToString("dd.MM.yyyy"))</td>
                            <td>@(((DateTime)item.WriterCreateDate).ToString("dd.MM.yyyy"))</td>
                            <td height="20" style="overflow-x:auto">@item.WriterAddress</td>
                            <td>@item.WriterStatus</td>
                            <td>@item.Country.CountryName</td>
                            <td><a class="btn btn-primary" href="/Admin/UpdateWriter/@item.WriterID/"><span class="fa fa-check"></span></a></td>
                            <td><a class="btn btn-danger" href="/Admin/DeleteWriter/@item.WriterID/"><span class="fa fa-trash"></span></a></td>
                        </tr>
                        }

                    </tbody>
                </table>
                <a class="btn btn-info" style="margin-top:10px;" asp-action="AddWriter" asp-controller="Admin">Yazar Ekle</a>
            </div>
        </div>
    </div>
</div>