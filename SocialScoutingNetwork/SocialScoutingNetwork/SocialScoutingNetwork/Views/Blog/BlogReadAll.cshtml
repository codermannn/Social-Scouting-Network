@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogReadAll";
    Layout = "~/Views/Shared/UserLeftLayout.cshtml";
}

<section class="section" style="margin-top:20px;">
    <div class="row">

        <div class="col-lg-3">

        </div>

        <div class="col-lg-6">
            @foreach (var item in Model)
            {
                <div class="">
                    <div class="card-header">
                        <a href="#" class="ri-account-circle-fill bx-pull-left ri-2x"></a>
                        <a href="#" class="ql-size-small">@item.Writer.WriterName @item.Writer.WriterSurname</a> <br />
                        <span class="text-muted small pt-2 ps-1">@(((DateTime)item.BlogCreateDate).ToString("dd.MM.yyyy"))</span>
                    </div>

                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="~/BlogImageFiles/@item.BlogImage" style="height:200px;" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@item.BlogTitle</h5>
                                    <p class="card-text">@item.BlogContent </p>
                                    <br />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        @await Component.InvokeAsync("CommentListByBlog", new {id = ViewBag.i})
        @await Html.PartialAsync("/Views/Comment/CommentListByBlog.cshtml")

        </div>

        <div class="col-lg-3">

        </div>
    </div>
</section>

